<?xml version="1.0" encoding="utf-8"?>
<!-- By default, FrameLayout, just like your ScrollView, can accommodate
one child element in it - the child can be a view or viewgroup

It is not mandatory that you need to use FrameLayout as the root view group
of your fragment. You can also use LinearLayout, ConstraintLayout and so on in the
place of FrameLayout-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f00"
    tools:context=".RedFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/number1"
            android:hint="Enter a number"
            android:inputType="number"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_margin="1dp"
            android:layout_height="50dp"/>

        <EditText
            android:id="@+id/number2"
            android:hint="Enter a number"
            android:layout_margin="1dp"
            android:background="@color/white"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <Button
            android:id="@+id/plus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click me"/>

        <TextView
            android:id="@+id/result"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            tools:text="This text will not be shown to the user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</FrameLayout>